option()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  width 100%
  height 90px
  box-sizing border-box
  padding 5px 30px
  font-size 40px
  font-weight bold
  text-align center
  color var(--text-color)
  background var(--option-background-color)
  border 2px solid var(--border-hover-color)
  box-shadow 2px 2px 10px var(--border-hover-color)